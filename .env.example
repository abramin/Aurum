# Aurum Finance Workspace - Environment Configuration
# Copy this to .env and adjust values for your local setup

# Database (Postgres)
DATABASE_URL=postgres://aurum:aurum@localhost:5432/aurum?sslmode=disable

# Kafka
KAFKA_BROKERS=localhost:9092

# HTTP Server
PORT=8080

# Logging
# Levels: debug, info, warn, error
LOG_LEVEL=info
# Formats: json, text
LOG_FORMAT=json

# Environment
# Values: development, production
ENVIRONMENT=development
